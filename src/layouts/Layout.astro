---
import '@fontsource-variable/inter';
import '@fontsource-variable/josefin-sans';
import '../styles/globals.css';
import Analytics from '@vercel/analytics/astro'

interface Props {
	title: string;
}

const { title } = Astro.props;
import Blob from '../components/Blob.astro';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content="Desarrollador web enfocado en el frontend con experiencia en desarrollo de apps minimalistas, enfocadas al performance y la usabilidad." />
		<meta name="author" content="Adrian Rangel" />
		<meta name="keyword" content="desarrollador web, frontend, apps minimalistas, performance, usabilidad" />
		<title>{title}</title>
	</head>
	<body class="max-w-full min-h-screen font-body bg-main-bg text-main-text relative">
		<Blob />
		<slot />
		<Analytics />
	</body>
</html>

