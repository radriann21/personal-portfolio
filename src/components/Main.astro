---
import TechComponent from './TechComponent.astro';
import ContactComponent from './ContactComponent.astro';
import ProjectCard from './ProjectCard.astro';
import CuriosityComponent from './CuriosityComponent.astro';
import ProjectsList from './ProjectsList.astro';
import ExperienceList from './ExperienceList.astro';
import EducationComponent from './EducationComponent.astro';
import RecognitionsComponent from './RecognitionsComponent.astro';
---


<main class="w-full flex flex-col mt-8">
  <h2 id="about" class="font-headings text-2xl font-bold text-slate-200">Sobre mi</h2>
  <section class="w-full mt-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 grid-rows-1 md:grid-rows-2 gap-4">   
    <TechComponent />
    <ContactComponent />
    <ProjectCard 
      title='BenchReAI'
      description="App web  ganadora en la feria de programación de la universidad Mario Briceño Irragorry. Permite la escritura de código, ejecución y análisis del mismo, además el tener un chat con IA para obtener explicaciones, análisis y sugerencias."
      technologies={["NextJS", "TypeScript", "Tailwind", "Gemini API"]}
      link='https://bench-reai.vercel.app/'
      code='https://github.com/radriann21/benchreai'
      starred={true}
    /> 
    <CuriosityComponent />
  </section>
  <ProjectsList />
  <ExperienceList />
  <EducationComponent />
  <RecognitionsComponent />
</main>

<script>
  import { animate, inView } from "motion"

  inView('#about', (element) => {
    let animationTriggered = false
    if (!animationTriggered) {
      animate(element, 
    {
      x: [-100, 0],
      opacity: [0, 1]
    },
    {
      duration: .5,
      ease: 'easeIn'
    }
  )
      animationTriggered = true
    }
  })
</script>