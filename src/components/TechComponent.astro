---
import { TechDisplay } from './Icons';
---

<article id="tech" class="col-span-1 md:col-span-1 lg:col-span-2 row-span-1 rounded-md bg-slate-700/10 border-[1px] border-sky-500/20 text-center p-4 md:p-6">
  <h3 class="font-headings text-lg font-bold">Tecnolog√≠as</h3>
  <TechDisplay client:visible />
</article>

<script>
  import { inView, animate } from "motion"

  inView("#tech", ((element) => {
    let animationTriggered = false
    if (!animationTriggered) {
      animate(element, 
      {
        y: [100, 0],
        opacity: [0, 1]
      },
		{
			duration: 0.7,
			ease: 'easeIn',
		}
	)
   animationTriggered = true }
  }))
</script>