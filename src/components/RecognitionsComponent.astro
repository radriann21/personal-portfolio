---
import { getLangFromUrl, getTranslations } from "../utils/translations";
import { recognitions } from "../utils/recognitions";

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
---

<section class="w-full mt-12">
  <h3 class="font-headings text-2xl font-bold text-slate-200">
    {t("recognitions.title")}
  </h3>
  <ul class="mt-8 flex flex-col space-y-4">
    {
      recognitions.map((recognition) => (
        <li class="border-b-1 border-slate-600 pb-1">
          <h4 class="text-lg font-bold text-main-text font-headings">
            {recognition.name[lang]}
          </h4>
          <p>{recognition.organization}</p>
          <span class="text-slate-500 text-sm">{recognition.year}</span>
          <p class="text-sm">{recognition.description[lang]}</p>
        </li>
      ))
    }
  </ul>
</section>
