---
const options = [
	{
		label: 'Inicio',
		url: '/'
	},
	{
		label: 'Contacto',
		url: '/contacto'
	}
]
---

<header class="w-full flex items-center justify-between font-headings">
	<ul class="list-none flex items-center">
		{
			options.map((option) => (
				<li class="cursor-pointer font-semibold py-2 px-4 border border-transparent transition-all duration-300 hover:bg-slate-400/10 hover:border-sky-700/40 rounded-md mr-2">
					<a href={option.url}>{option.label}</a>
				</li>
			))
		}
	</ul>
	<div>
		<button class="inline-flex items-center cursor-pointer py-2 px-6 border border-sky-700/40 bg-slate-400/10 transition-all duration-300 rounded-md hover:bg-slate-400/20 hover:border-sky-700/60">
			CV
			<svg class="ml-2 w-4 h-4" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
		</button>
	</div>
</header>